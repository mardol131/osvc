{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_PAYMENT_LINK",
        "NEXT_PUBLIC_SUB_ACCOUNT_LINK",
        "ECOMAIL_API_KEY",
        "STRIPE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_WEBSITE_URL",

        "STRIPE_MAIN_SERVICE_PRICE_ID",

        "STRIPE_IT_SERVICES_PRICE_ID",

        "STRIPE_TRADING_PRICE_ID",

        "STRIPE_HOSPITALITY_PRICE_ID",

        "STRIPE_REAL_ESTATE_PRICE_ID",

        "STRIPE_CONSULTING_PRICE_ID",

        "STRIPE_MARKETING_PRICE_ID",

        "STRIPE_EDUCATION_PRICE_ID",

        "STRIPE_CULTURE_SPORT_PRICE_ID"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
