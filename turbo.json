{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_PAYMENT_LINK",
        "NEXT_PUBLIC_SUB_ACCOUNT_LINK",
        "ECOMAIL_API_KEY",
        "STRIPE_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_WEBSITE_URL"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
